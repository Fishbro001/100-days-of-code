  <div id=clock>
    <table>
      <thead>
      <tr class="info">
        <th colspan="4">End of the World is closer by:</th>
      </tr>
      </thead>
      <tbody>
        <tr class="info">
          <td id="days">0</td>
          <td id="hours">0</td>
          <td id="minutes">0</td>
          <td id="seconds">0</td>
